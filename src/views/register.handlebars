<div class="containerRegister">
  <div class="contentRegister">
    <h2>Welcome!</h2>
    <p>Some text goes here...</p>
    <img src="tu-imagen.jpg" alt="Descripción de la imagen" />
  </div>
  <div class="form-container">
    <form action="/api/users" method="post" class="custom-registration-form">
      <div class="custom-form-group">
        <label for="first_name" class="custom-label">Nombre:</label>
        <input
          type="text"
          id="first_name"
          name="first_name"
          class="custom-form-input"
          required
        />
      </div>
      <div class="custom-form-group">
        <label for="last_name" class="custom-label">Apellido:</label>
        <input
          type="text"
          id="last_name"
          name="last_name"
          class="custom-form-input"
          required
        />
      </div>
      <div class="custom-form-group">
        <label for="age" class="custom-label">Edad:</label>
        <input
          type="number"
          id="age"
          name="age"
          class="custom-form-input"
          required
        />
      </div>
      <div class="custom-form-group">
        <label for="email" class="custom-label">Email:</label>
        <input
          type="email"
          id="email"
          name="email"
          class="custom-form-input"
          required
        />
      </div>
      <div class="custom-form-group">
        <label for="password" class="custom-label">Contraseña:</label>
        <input
          type="password"
          id="password"
          name="password"
          class="custom-form-input"
          required
        />
      </div>
      <button
        type="submit"
        class="custom-btn custom-btn-primary"
      >Registrarse</button>
    </form>
  </div>
</div>